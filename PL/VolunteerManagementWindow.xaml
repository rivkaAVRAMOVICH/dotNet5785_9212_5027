<Window x:Class="PL.VolunteerManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:PL"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="VolunteerManagementWindow" Height="600" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Window.Resources>
        <CollectionViewSource x:Key="RolesCollectionKey" />
        <CollectionViewSource x:Key="DistanceTypesCollectionKey" />
        <conv:NullToBoolInverseConverter x:Key="NullToBoolInverseConverter"/>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- ID -->
            <RowDefinition Height="Auto"/>
            <!-- Name + IsActive -->
            <RowDefinition Height="Auto"/>
            <!-- Phone -->
            <RowDefinition Height="Auto"/>
            <!-- Email -->
            <RowDefinition Height="Auto"/>
            <!-- Address -->
            <RowDefinition Height="Auto"/>
            <!-- Role -->
            <RowDefinition Height="Auto"/>
            <!-- Distance Type -->
            <RowDefinition Height="Auto"/>
            <!-- Max Distance -->
            <RowDefinition Height="Auto"/>
            <!-- Call Info -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ID (ReadOnly) -->
        <Label Content="ID:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="5"
                 Text="{Binding Volunteer.Id}" IsReadOnly="True"/>

        <!-- Name -->
        <Label Content="Name:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5"
                 Text="{Binding Volunteer.Name, Mode=TwoWay}"/>

        <!-- Is Active (on same row as Name, right-aligned) -->
        <CheckBox Content="Is Active" HorizontalAlignment="Right" Margin="5"
                  Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"
                  IsChecked="{Binding Volunteer.IsActive}"
                  IsEnabled="{Binding Volunteer.CallInVolunteerHandle, Converter={StaticResource NullToBoolInverseConverter}}"/>

        <!-- Phone -->
        <Label Content="Phone:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="5"
                 Text="{Binding Volunteer.Phone, Mode=TwoWay}"/>

        <!-- Email -->
        <Label Content="Email:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="5"
                 Text="{Binding Volunteer.Email, Mode=TwoWay}"/>

        <!-- Address -->
        <Label Content="Address:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="5"
                 Text="{Binding Volunteer.Address, Mode=TwoWay}"/>

        <!-- Role -->
        <Label Content="Role:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <ComboBox Grid.Row="5" Grid.Column="1" Margin="5"
                  ItemsSource="{Binding Source={StaticResource RolesCollectionKey}}"
                  SelectedItem="{Binding Volunteer.Role, Mode=TwoWay}"/>

        <!-- Distance Type -->
        <Label Content="Distance Type:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <ComboBox Grid.Row="6" Grid.Column="1" Margin="5"
                  ItemsSource="{Binding Source={StaticResource DistanceTypesCollectionKey}}"
                  SelectedItem="{Binding Volunteer.TypeOfDistance, Mode=TwoWay}"/>

        <!-- Max Distance -->
        <Label Content="Max Distance:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="7" Grid.Column="1" Margin="5"
                 Text="{Binding Volunteer.MaxDistance, Mode=TwoWay}"/>

        <!-- Call In Progress Info -->
        <GroupBox Header="Call In Progress" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Margin="5"
                  Visibility="{Binding Volunteer.CallInVolunteerHandle, Converter={StaticResource NullToVisibilityConverter}}">
            <StackPanel Margin="5">
                <TextBlock>
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Call ID: {0}">
                            <Binding Path="Volunteer.CallInVolunteerHandle.CallId"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock>
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Call Address: {0}">
                            <Binding Path="Volunteer.CallInVolunteerHandle.CallAddress"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock>
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Time Call Made: {0}">
                            <Binding Path="Volunteer.CallInVolunteerHandle.TimeCallMade"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock>
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Distance from Volunteer: {0} km">
                            <Binding Path="Volunteer.CallInVolunteerHandle.DistanceCallFromVolunteer"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StackPanel>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="9" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="10">
            <Button Content="Update" Width="100" Margin="10,5" Click="btnAddUpdate_Click"/>
        </StackPanel>
    </Grid>
</Window>

