<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Main window" Height="450" Width="800"
        Loaded="MainWindow_Loaded"
        Closed="MainWindow_Closed"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

        <Grid Margin="10">
        <!-- Define two main rows in the main layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- System Clock Section -->
        <GroupBox Header="System Clock" Grid.Row="0" Margin="0,0,0,10">
            
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">

                <!-- Label to display the current system time -->
                <Label Content="{Binding CurrentTime}" FontSize="16" FontWeight="Bold" Margin="0,0,20,0"/>

                <!-- Buttons to advance the time -->
                <Button Content="Add Minute" Click="btnAddOneMinute_Click" Margin="5"/>
                <Button Content="Add Hour" Click="btnAddOneHour_Click" Margin="5"/>
                <Button Content="Add Day" Click="btnAddOneDay_Click" Margin="5"/>
                <Button Content="Add Month" Click="btnAddOneMonth_Click" Margin="5"/>
                <Button Content="Add Year" Click="btnAddOneYear_Click" Margin="5"/>
                
            </StackPanel>
        </GroupBox>

        <!-- Bottom section: Configuration variables + Navigation buttons -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Configuration Variables Section -->
            <GroupBox Header="Configuration Variables" Grid.Row="0" Margin="0,0,0,10">
                <StackPanel Margin="10">

                    <!-- Configuration variable 1 -->
                    <TextBox Text="{Binding MaxYearRange, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


                    <!-- Button to update the configuration variable in the database -->
                    <Button Content="Update Max Range" Width="200" Margin="0,5" Click="btnUpdateMaxRange_Click"/>
                    <Button Content="Update Configuration" Width="200" Margin="0,5"/>
                    
                </StackPanel>
            </GroupBox>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Left" Margin="10">

                <!-- Button to initialize the database with initial data -->
                <Button x:Name="btnInitializeDB" Content="Initialize Database" Width="200" Margin="0,5" Click="btnInitializeDB_Click"/>
                <!-- Button to reset the database (clear all data) -->
                <Button x:Name="btnResetDB" Content="Reset Database" Width="200" Margin="0,5" Click="btnResetDB_Click"/>


                <!-- Button to open list windows -->
                <Button Content="Show Assignment List" Width="200" Margin="0,5" Click="btnAssignment_Click"/>
                <Button Content="Show Call List" Width="200" Margin="0,5" Click="btnCall_Click"/>
                <Button Content="Show Volunteer List" Width="200" Margin="0,5" Click="btnVolunteer_Click"/>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
